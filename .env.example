# JSON-Lite Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# ========================================
# OP1 Large Configuration
# ========================================
# JSON processing backend (yajl2_c, python)
JSON_BACKEND=yajl2_c

# Resource limits for OP1
OP1_MEMORY_LIMIT=2G
OP1_CPU_LIMIT=2

# Chunk size for processing (in bytes)
OP1_CHUNK_SIZE=8388608

# Log level (DEBUG, INFO, WARNING, ERROR)
OP1_LOG_LEVEL=INFO

# ========================================
# OP2 Lite Configuration
# ========================================
# Number of Uvicorn workers
WORKERS=4

# API port
PORT=8000

# Resource limits for OP2
OP2_MEMORY_LIMIT=1G
OP2_CPU_LIMIT=2

# Max upload file size (in bytes)
MAX_UPLOAD_SIZE=1073741824

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# Log level
OP2_LOG_LEVEL=INFO

# CORS origins (comma-separated)
CORS_ORIGINS=*

# ========================================
# Monitoring Configuration
# ========================================
# Enable Prometheus monitoring
PROMETHEUS_ENABLED=false

# Prometheus scrape interval (seconds)
SCRAPE_INTERVAL=15

# Metrics port
METRICS_PORT=9090

# ========================================
# Docker Configuration
# ========================================
# Compose project name
COMPOSE_PROJECT_NAME=json-lite

# Network name
NETWORK_NAME=json-lite-network

# Restart policy (always, unless-stopped, on-failure, no)
RESTART_POLICY=unless-stopped

# ========================================
# Volume Configuration
# ========================================
# Input data directory (for OP1)
DATA_DIR=./data

# Output directory
OUTPUT_DIR=./output

# ========================================
# Security Configuration
# ========================================
# Run as user ID
USER_ID=1000

# Run as group ID
GROUP_ID=1000

# Enable security options
SECURITY_OPT=no-new-privileges:true

# ========================================
# Development Configuration
# ========================================
# Enable debug mode
DEBUG=false

# Enable hot reload (development only)
RELOAD=false

# Development volume mounts
DEV_MOUNT=false